<launch>
	<arg name="cam_name" default="haptic1" />
	<arg name="modality_local" default="water" />
	<arg name="video_file" default="/Users/aaron/workspace/vision_exp/camera_sonar_may_2015/exp/2015-06-01/henderson_dry_checkerboard1/video/composite.mkv" />

	<node pkg="video_tools" type="stereo_streamer" name="$(arg cam_name)"
		args="$(arg video_file)">
		<param name="config/camera_name" value="$(arg cam_name)" />
		<remap from="camera/left/image_raw" to="$(arg cam_name)/left/image_raw" />
		<remap from="camera/left/set_camera_info" to="$(arg cam_name)/left/set_camera_info" />
		<remap from="camera/right/image_raw" to="$(arg cam_name)/right/image_raw" />
		<remap from="camera/right/set_camera_info" to="$(arg cam_name)/right/set_camera_info" />
	</node>

	<node pkg="camera_calibration" type="cameracalibrator.py" name="$(arg cam_name)_calibrator" 
		args="--pattern=chessboard --size=8x6 --square=0.07391 --zero-tangent-dist -k 4">
		<remap from="image" to="$(arg cam_name)/left/image_raw" />		
		<remap from="camera" to="$(arg cam_name)/left" />		

	</node>

</launch>
